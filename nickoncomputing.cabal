name:          nickoncomputing
version:       0.0.0
description:   A Hakyll blog site 
copyright:     (c) 2013 Nicholas McAvoy and Travis Brown
license-file:  LICENSE.txt
author:        Nicholas McAvoy
maintainer:    nicholas.mcavoy@gmail.com
build-type:    Simple
cabal-version: >= 1.2

library
  ghc-options:     -Wall -O2
  hs-source-dirs:  src
  exposed-modules:
  build-depends:
    aeson >= 0.6.1.0,
    array >= 0.4.0.1,
    base >= 2,
    binary >= 0.5.1.1,
    blaze-html >= 0.5.1.3,
    bytestring >= 0.10.0.2,
    containers >= 0.5.0.0,
    either >= 3.4,
    hakyll >= 4.4.3.0,
    filepath,
    mtl >= 2.1.2,
    old-locale >= 1.0.0.5,
    pandoc >= 1.11.1,
    regex-tdfa >= 1.1.8,
    shakespeare-js >= 1.1.4,
    split >= 0.2.2,
    statistics >= 0.10.2.0,
    text >= 0.11.2.3,
    time >= 1.4.0.1,
    transformers >= 0.3.0.0,
    vector-space >= 0.8.6,
    xml-conduit >= 1.1.0.3,
    xml-hamlet >= 0.4.0.4

executable site
  ghc-options:     -Wall -O2
  hs-source-dirs:  src
  main-is:         Main.hs

